    <!-- Criando um modal ao clicar no botão Adicionar relacionado à protocolo -->
    <div id="modal-login">
        <div class="modal_box modal_box-login">
            <header>Login no sistema</header>
            <div class="input-field">
                <label for="login"><b>Login </b></label>
                <input id="login" type="text" value="">

                <br>

                <label for="senha"><b>Senha</b></label>
                <input id="senha" type="password" value="">
            </div>
            <div class="button-group">
                <button onclick="userLogin()">Entrar</button>
                <button type="button"
                    onclick="document.getElementById('modal-login').style.display='none'">Cancelar</button>
                <span onclick="userCadastrar()">Cadastrar</span>
            </div>
        </div>
