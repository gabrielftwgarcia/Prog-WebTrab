<script>
    var login = loginView => {
        document.getElementById("modal-login").style.display = "block";

        document.getElementById('login').focus();

        // Limpando valores dos campos de login e senha
        document.getElementById('login').value = "";
        document.getElementById('senha').value = "";
    }

    document.getElementById('loginBtn').onclick = login;


    function userLogin(){

        if(document.getElementById('login').value === "" || document.getElementById('senha').value === ""){
            alert("Os campos login e senha devem ser preenchidos para proceder!");
        }
        else{
            alert("parebens pelo login")
        }
        
    }

    function userCadastrar(){
        // Registro.hbs ou outra.hbs ?
        alert("Redireciona para a tela de cadastro");
    }

</script>